#!/usr/bin/bash

# distrobox create --image archlinux:latest --name arch-root --root
# distrobox enter arch-root
#
# Then run this file:

echo "en_US.UTF-8 UTF-8" | sudo tee /etc/locale.gen
sudo locale-gen
echo "LANG=en_US.UTF-8" | sudo tee /etc/locale.conf

sudo pacman -S exa fish neovim openssh wl-clipboard

sudo ln -s /usr/bin/nvim /usr/bin/vim
